<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_background"
    android:padding="16dp"><ScrollView
    android:id="@+id/scrollSettings"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textColor="@color/light_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="24dp" />

        <!-- Items container -->
        <!-- Repeat CardViews as before -->

        <!-- Unit -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUnit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/dark_blue_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <ImageView
                    android:id="@+id/ic_unit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unit"
                    android:tint="@color/light_text"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tvUnitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn vị"
                    android:textColor="@color/light_text"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/ic_unit"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/light_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Offline Model -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOffline"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/dark_blue_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <ImageView
                    android:id="@+id/ic_offline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_offline"
                    android:tint="@color/light_text"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tvOfflineLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô hình offline"
                    android:textColor="@color/light_text"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/ic_offline"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/light_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Feedback -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFeedback"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/dark_blue_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <ImageView
                    android:id="@+id/ic_feedback"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feedback"
                    android:tint="@color/light_text"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tvFeedbackLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phản hồi"
                    android:textColor="@color/light_text"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/ic_feedback"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Legal Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLegal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/dark_blue_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <ImageView
                    android:id="@+id/ic_legal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_legal"
                    android:tint="@color/light_text"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tvLegalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin hợp pháp"
                    android:textColor="@color/light_text"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/ic_legal"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/light_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Theme Switch -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTheme"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/dark_blue_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat"
                    android:tint="@color/light_text" />
                <TextView
                    android:id="@+id/tvThemeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chủ đề ánh sáng"
                    android:textColor="@color/light_text"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
                <Switch
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/primary"
                    android:trackTint="@color/light_blue_card" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Font Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cỡ chữ"
            android:textColor="@color/light_text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />
        <SeekBar
            android:id="@+id/seekFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary"
            android:max="30"
            android:progress="16" />

        <!-- Version -->
        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_text"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="24dp"
            android:text="Phiên bản: 1.0.0" />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>