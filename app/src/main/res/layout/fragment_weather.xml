<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Nhập địa điểm..." />

    <!--windy-->

    <WebView
        android:id="@+id/windyWebView"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/btnLayerMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/windyWebView"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Layer Menu" />

    <Spinner
        android:id="@+id/layerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLayerMenu"
        android:layout_margin="16dp" />

</RelativeLayout>
